{
  "enabled": true,
  "name": "Remove Unnecessary MD Files",
  "description": "Monitors for unnecessary markdown files in the root directory and prompts to remove them, keeping only README.md and essential documentation",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "runCommand",
    "command": "find . -maxdepth 1 -type f -name \"*.md\" ! -name \"README.md\" -exec rm {} \\;"
  }
}